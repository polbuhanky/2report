<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_pressed_light_bg" />
            <stroke android:width="1dp" android:color="@color/btn_pressed_light_stroke" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_pressed_light_bg" />
            <stroke android:width="1dp" android:color="@color/btn_pressed_light_stroke" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_light_bg" />
            <stroke android:width="1dp" android:color="@color/btn_light_stroke" />
        </shape>
    </item>
</selector>
